<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingHorizontal="50dp"
    tools:context=".SelectionActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Home" />

    <Button
        android:id="@+id/btn_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:backgroundTint="@color/bluesky"
        android:layout_marginTop="50dp"
        android:height="150dp"
        android:drawableLeft="@mipmap/docente_pic_foreground"
        android:text="Docentes" />

    <Button
        android:id="@+id/btn_esc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bluesky"
        android:layout_marginTop="35dp"
        android:drawableLeft="@mipmap/escuela_pic_foreground"
        android:textAllCaps="false"
        android:height="150dp"
        android:text="Escuelas" />



</LinearLayout>